<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Hybrid Automation Suite" parallel="tests" thread-count="2" verbose="2">

    <listeners>
        <listener class-name="com.automation.listeners.AllureTestListener"/>
        <listener class-name="com.automation.listeners.AllureLifecycleConfig"/>
    </listeners>

    <test name="Login Tests" preserve-order="true">
        <groups>
            <run>
                <include name="smoke"/>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="com.automation.tests.LoginTest">
                <methods>
                    <include name="testLoginWithValidCredentials"/>
                    <include name="testLoginWithInvalidCredentials"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>
